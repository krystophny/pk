#!/bin/sh
# pk-query - query package info
# Usage: pk query <pkgname>

SCRIPT_DIR="$(dirname "$0")"
. "$SCRIPT_DIR/pk-common"

[ $# -ge 1 ] || die "usage: pk query <pkgname>"

pkgname="$1"
infofile="$DB_DIR/$pkgname/info"

if [ ! -f "$infofile" ]; then
    echo "$pkgname is not installed"
    exit 1
fi

read -r name < "$infofile"
read -r version < "$infofile"
{ read -r name; read -r version; } < "$infofile"
echo "$name $version [installed]"
