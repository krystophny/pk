#!/bin/sh
# pk-files - list files in an installed package
# Usage: pk files <pkgname>

SCRIPT_DIR="$(dirname "$0")"
. "$SCRIPT_DIR/pk-common"

[ $# -ge 1 ] || die "usage: pk files <pkgname>"

pkgname="$1"
fileslist="$DB_DIR/$pkgname/files"

[ -f "$fileslist" ] || die "package not installed: $pkgname"
cat "$fileslist"
